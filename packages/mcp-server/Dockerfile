# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
FROM node:lts-alpine

# Install pnpm globally
RUN npm install -g pnpm

# Set working directory
WORKDIR /app

# Copy the entire repository (monorepo context)
COPY . .

# Set default environment variable
ENV RPC_URL=https://rpc.orai.io

# Install dependencies ignoring postinstall scripts, then build and fix permissions
RUN pnpm install --frozen-lockfile --ignore-scripts && pnpm build && chmod +x packages/mcp-server/dist/index.js

# Expose the default port (4000)
EXPOSE 4000

# Start the MCP server
CMD ["node", "--experimental-specifier-resolution=node", "packages/mcp-server/dist/index.js"]
